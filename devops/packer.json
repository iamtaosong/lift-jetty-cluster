{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "aws_region": null,
    "vpc_id": null,
    "subnet_id": null,
    "security_group_id": null,
    "source_ami": null,
    "user_password": null,
    "timestamp": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami": "{{ user `source_ami` }}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "associate_public_ip_address": "true",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "vpc_id": "{{ user `vpc_id` }}",
      "subnet_id": "{{ user `subnet_id` }}",
      "security_group_id": "{{ user `security_group_id` }}",
      "ami_name": "lift-jetty-cluster-aws-{{user `timestamp`}}",
      "tags": {
        "Name": "lift-jetty-cluster-aws",
        "Timestamp": "{{user `timestamp`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "java.sh"
    }, 
    {
      "type": "file",
      "source": "./app.tar.gz",
      "destination": "/tmp/app.tar.gz"
    },
    {
      "type": "file",
      "source": "./rc.local",
      "destination": "/tmp/rc.local"
    },
    {
      "type": "file",
      "source": "./ssh-key.pub",
      "destination": "/tmp/authorized_keys"
    },
    {
      "type": "shell",
      "script": "install.sh",
      "environment_vars": ["user_password={{ user `user_password` }}"]
    }
  ]
}